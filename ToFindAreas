package edubridge;

import java.util.Scanner;

public class Areas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num,a,b;
		System.out.println("To Find the AREA of Shapes : ");
		System.out.println("Press 1 for SQUARE");
		System.out.println("Press 2 for RECTANGLE");
		System.out.println("Press 3 for CIRCLE");
		System.out.println("Press 4 for TRIANGLE");
		Scanner sc=new Scanner(System.in);
		 num =sc.nextInt();
		switch(num)
		{
		case 1:
			int square=0;
			a=0;
			System.out.println("Enter Value for Area of Square");
			a=sc.nextInt();
			square=a*a;
			System.out.println("Area of Square = " +square);
			break;
		case 2:
			int Rectangle=0;
			a=0;b=0;
			System.out.println("Enter Value for Area of Rectangle");
			a=sc.nextInt();
			b=sc.nextInt();
			Rectangle=a*b;
			System.out.println("Area of Rectangle is = " +Rectangle);
		case 3:
			float Circle;
			a=0;
			System.out.println("Enter value for Area of Circle");
			a=sc.nextInt();
			Circle=(22*a*a)/7;
			System.out.println("Area of Circle = "+ Circle);
		case 4:
			float triangle;
			a=0;b=0;
			System.out.println("Enter Value for Area of Triangle");
			a=sc.nextInt();
			b=sc.nextInt();
			triangle=(a*b)/2;
			System.out.println("Area of Triangle = "+triangle);
		}
	}
 
}
